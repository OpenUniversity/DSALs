package aspects.cool;

coordinator base.BoundedStack { 

  selfex {push(java.lang.Object), pop()}; 
  mutex {push(java.lang.Object), pop()};

  condition full = false, empty = true; 
  int top = 0; 
  
  push(java.lang.Object):
  	 requires (!full);
      on_entry {top = top + 2;} 
      on_exit  {
        empty = false;
        if (top == buffer.length) full = true; 
      }
  

  pop(): 
  	  requires (!empty); 
      on_entry {top = top - 1;} 
      on_exit  {
        full = false; 
        if (top == 0) empty = true; 
      }
}
  
